{% extends 'base.html.twig' %}

{% block title %}Créer un Événement{% endblock %}

{% block body %}
<h1>{{ evenement is defined ? 'Modifier un événement' : 'Créer un événement' }}</h1>

{{ form_start(form) }}

    {{ form_row(form.titre) }}
    {{ form_row(form.description) }}
    {{ form_row(form.dateDebut) }}
    {{ form_row(form.dateFin) }}
    {{ form_row(form.capacite) }}
    {{ form_row(form.estPublic) }}
    {{ form_row(form.categorie) }}
    {{ form_row(form.lieu) }}

    {# <h3>Médias associés</h3>
    {{ form_row(form.medias) }} #}

    <button class="btn btn-primary">{{ evenement is defined ? 'Modifier' : 'Créer' }}</button>

{{ form_end(form) }}

<a href="{{ path('evenement_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}
